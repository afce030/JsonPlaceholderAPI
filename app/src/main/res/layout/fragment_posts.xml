<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".ui.Fragments.PostsFragment">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/rvAllPosts"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnRefresh" android:layout_marginTop="16dp"/>
    <Button
            android:text="Refrescar"
            android:layout_width="120dp"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:id="@+id/btnRefresh" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:background="@drawable/rounded_button"/>

    <Button
            android:text="Borrar"
            android:layout_width="120dp"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:id="@+id/btnErase" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_button" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>